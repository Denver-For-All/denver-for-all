---
import { Icon } from 'astro-icon/components';

interface Props {
  slug: string;
  title: string;
  titleEs: string;
  summary: string;
  summaryEs: string;
  category: string;
  categoryEs?: string;
  categoryKey: string;
  icon: string;
}

const { slug, title, titleEs, summary, summaryEs, category, categoryEs, categoryKey, icon } = Astro.props;
---

<a href={`/platform/${slug}`} class="card policy-card">
  <div class="policy-card__thumbnail">
    <img src={`/og/${categoryKey}.png`} alt="" loading="lazy" width="600" height="315" />
    <div class="policy-card__icon">
      <Icon name={`lucide:${icon}`} size={24} />
    </div>
  </div>
  <div class="policy-card__body">
    <span class="card__category" data-en={category} data-es={categoryEs || category}>{category}</span>
    <h3 class="card__title" data-en={title} data-es={titleEs}>{title}</h3>
    <p class="card__summary" data-en={summary} data-es={summaryEs}>{summary}</p>
    <span class="policy-card__link" data-en="Read Full Proposal →" data-es="Leer Propuesta Completa →">
      Read Full Proposal →
    </span>
  </div>
</a>

<style>
  .policy-card {
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 0;
    overflow: hidden;
  }

  .policy-card__thumbnail {
    position: relative;
    width: 100%;
    aspect-ratio: 1200 / 630;
    overflow: hidden;
  }

  .policy-card__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .policy-card:hover .policy-card__thumbnail img {
    transform: scale(1.05);
  }

  .policy-card__icon {
    position: absolute;
    bottom: 0.75rem;
    left: 0.75rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.92);
    color: var(--color-primary);
    backdrop-filter: blur(4px);
  }

  .policy-card__body {
    padding: 1.25rem 1.5rem 1.5rem;
  }

  .policy-card__link {
    display: inline-block;
    margin-top: 1rem;
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-primary);
  }
</style>
