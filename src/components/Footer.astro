---
import type { Locale } from '../i18n/utils';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
const isEs = locale === 'es';
const prefix = isEs ? '/es' : '';
const year = new Date().getFullYear();
---

<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__brand">
        <h3 class="footer__logo">{isEs ? 'Denver Para Todos' : 'Denver For All'}</h3>
        <p class="footer__tagline">
          {isEs ? 'Hecho por el pueblo, para el pueblo.' : 'Built by the people, for the people.'}
        </p>
      </div>

      <div class="footer__links">
        <h4>{isEs ? 'Plataforma' : 'Platform'}</h4>
        <a href={`${prefix}/platform`}>{isEs ? 'Todas las Propuestas' : 'All Proposals'}</a>
        <a href={`${prefix}/run-for-denver`}>{isEs ? 'Postularse por Denver' : 'Run For Denver'}</a>
        <a href={`${prefix}/take-action`}>{isEs ? 'Actúa' : 'Take Action'}</a>
      </div>

      <div class="footer__links">
        <h4>{isEs ? 'Herramientas' : 'Tools'}</h4>
        <a href={`${prefix}/tools/eviction-tracker`}>{isEs ? 'Rastreador de Desalojos' : 'Eviction Tracker'}</a>
        <a href={`${prefix}/tools/rent-calculator`}>{isEs ? 'Calculadora de Alquiler' : 'Rent Calculator'}</a>
        <a href={`${prefix}/tools/campaign-finance`}>{isEs ? 'Sigue el Dinero' : 'Follow the Money'}</a>
        <a href={`${prefix}/tools/know-your-rights`}>{isEs ? 'Conoce Tus Derechos' : 'Know Your Rights'}</a>
        <a href={`${prefix}/tools/sidewalk-data`}>{isEs ? 'Datos de Aceras' : 'Sidewalk Data'}</a>
        <a href={`${prefix}/tools/eviction-data`}>{isEs ? 'Datos de Desalojos' : 'Eviction Data'}</a>
        <a href={`${prefix}/tools/money-in-politics`}>{isEs ? 'Dinero en Política' : 'Money in Politics'}</a>
      </div>

      <div class="footer__links">
        <h4>{isEs ? 'Conectar' : 'Connect'}</h4>
        <a href="mailto:info@denverforall.org">{isEs ? 'Escríbenos' : 'Email Us'}</a>
        <a href="https://www.reddit.com/r/DenverForAll/" target="_blank" rel="noopener">Reddit</a>
        <a href="https://signal.group/#CjQKIDnsKXfjsfzF6z51cdXSTRKzZWxG71JNlmN-lawMNOkWEhAKQ8yueN1JU8E6RaRM6D8I" target="_blank" rel="noopener">{isEs ? 'Grupo de Signal' : 'Signal Group'}</a>
        <a href="https://opencollective.com/denver-for-all" target="_blank" rel="noopener">{isEs ? 'Donar · Registro Público' : 'Donate · Public Ledger'}</a>
        <a href="https://github.com/Denver-For-All/denver-for-all" target="_blank" rel="noopener">{isEs ? 'GitHub · Código Fuente' : 'GitHub · Source Code'}</a>
      </div>
    </div>

    <div class="footer__bottom">
      <p>
        <a href="https://github.com/Denver-For-All/denver-for-all" target="_blank" rel="noopener">{isEs ? 'Este sitio es de código abierto.' : 'This site is open source.'}</a>
        &copy; {year} {isEs ? 'Denver Para Todos' : 'Denver For All'}.
        {isEs ? 'Construido con solidaridad y herramientas de código abierto.' : 'Built with solidarity and open-source tools.'}
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-text);
    color: white;
    padding: 3rem 0 1.5rem;
    margin-top: 4rem;
  }

  .footer a {
    color: var(--color-primary-light);
  }

  .footer a:hover {
    color: white;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer__logo {
    font-size: 1.25rem;
    color: white;
    margin-bottom: 0.5rem;
  }

  .footer__tagline {
    color: var(--color-text-light);
    font-size: 0.9rem;
  }

  .footer__links h4 {
    color: white;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  .footer__links a {
    display: block;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .footer__bottom {
    border-top: 1px solid rgba(255,255,255,0.1);
    padding-top: 1.5rem;
    font-size: 0.8rem;
    color: var(--color-text-light);
  }

  @media (max-width: 768px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
    }
    .footer__brand {
      grid-column: 1 / -1;
    }
  }
</style>
