<script>
  document.querySelectorAll('.copy-btn').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var letterId = this.getAttribute('data-letter');
      var letterEl = document.getElementById(letterId);
      if (letterEl) {
        navigator.clipboard.writeText(letterEl.textContent.trim()).then(function() {
          var confirm = btn.nextElementSibling;
          if (confirm) {
            confirm.classList.add('show');
            setTimeout(function() { confirm.classList.remove('show'); }, 2000);
          }
        }).catch(function() {
          // Clipboard unavailable
        });
      }
    });
  });
</script>
